


<h1>Cifrado Hash</h1>

<form method="post">
    <label>Contenido a cifrar:</label>
    <input type="text" name="contenido" required class="form-control" />
    <label>Resultado</label>
    <textarea rows="5" class="form-control" name="resultado">@ViewData["Resultado"]</textarea><br/>
    <button  type="submit" class=" btn btn-info" name="accion" value="cifrar">
        Cifrar contenido
    </button>
    <button type="submit" class="btn btn-danger" name="accion" value="comparar">
        Comparar contenido
    </button>
</form>

<hr />
@Html.Raw(ViewData["Mensaje"])